@model System.Collections.Generic.IEnumerable<Client2.Models.Room>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <h2>Add Room</h2>
    <form method="post" action="/Patient/Put">
        <div class="form-group">
            <label for="Type">Room Type<small class="text-danger"> (requied)</small></label>
            <select class="form-control" id="Type" name="Type" required>
                @foreach (var room in this.Model)
                {
                    <option value="@room.Type.Id">@room.Type.Type</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="Price">Last name</label>
            <input type="number" name="Price" class="form-control" id="Price">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
</body>
</html>